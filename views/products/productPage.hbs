<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <img src="{{product.image}}" class="card-img-top" alt="{{product.title}}">
                <div class="card-body">
                    <h1 class="card-title">{{product.title}}</h1>
                    <h2 class="card-subtitle mb-2 text-muted">{{product.price}}</h2>
                    <p class="card-text">{{product.description}}</p>
                    <a class="card-text" href="/profile/{{product.user._id}}">@{{product.user.username}}</a>
                    <p class="card-text">Fecha de publicacion:{{moment product.createdAt 'DD/MM/YYYY'}}</p>
                </div>
            </div>
            <div class="card p-2 mt-3 col-12">
                <form action="/products/{{product._id}}/messages" method="post">
                    <div class="mb-3">
                        <textarea class="form-control" id="description" name="description" placeholder="AÃ±ade un comentario" rows="1"></textarea>
                    </div>
                    <div class="mb-3 d-flex">
                        <button class="btn btn-warning" type="submit">Escribir mensaje</button>
                </form>
            </div>
            {{#each messages }}
            <div class="card m-3">
                <div class="card-body">
                    <img class="rounded-circle" src="{{this.user.avatarUrl}}" alt="{{this.user.username}}" width="25" />
                    <a class="list-group-item">@{{this.user.username}}</a>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>